<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.budgetapp.FirstFragment"
        android:label="@string/start_a_review_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <argument
            android:name="itemArray"
            app:argType="budgetapp.Item[]"
            />
        <argument
            android:name="count"
            app:argType="integer"
            />
        <argument
            android:name="title"
            app:argType="string"
            />
        <argument
            android:name="type"
            app:argType="string"
            />
        <argument
            android:name="categories"
            app:argType="string[]"
            />
        <argument
            android:name="fromDate"
            app:argType="string"
            />
        <argument
            android:name="toDate"
            app:argType="string"
            />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.budgetapp.SecondFragment"
        android:label="@string/item_review_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
        <argument
            android:name="itemArray"
            app:argType="budgetapp.Item[]"
            />
        <argument
            android:name="count"
            app:argType="integer"
            />
        <argument
            android:name="title"
            app:argType="string"
            />
        <argument
            android:name="type"
            app:argType="string"
            />
        <argument
            android:name="categories"
            app:argType="string[]"
            />
        <argument
            android:name="fromDate"
            app:argType="string"
            />
        <argument
            android:name="toDate"
            app:argType="string"
            />
        <action
            android:id="@+id/action_SecondFragment_to_ThirdFragment"
            app:destination="@id/ThirdFragment" />
    </fragment>
    <fragment
        android:id="@+id/ThirdFragment"
        android:name="com.example.budgetapp.ThirdFragment"
        android:label="@string/review_summary_label"
        tools:layout="@layout/fragment_third">
        <argument
            android:name="itemArray"
            app:argType="budgetapp.Item[]" />
        <argument
            android:name="categoryArray"
            app:argType="budgetapp.Category[]" />
    </fragment>
</navigation>